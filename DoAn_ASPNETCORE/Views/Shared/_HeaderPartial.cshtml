<div class="header">
    <div class="header-top">
        <div class="container">
            <div class="top-left">
                <a href="#"> Hỗ trợ  <i class="glyphicon glyphicon-phone" aria-hidden="true"></i>Nguyễn Huy Hoàng</a>
            </div>
            <div class="top-right">
                <ul>
                    <li><a href="~/checkout">Thanh toán</a></li>
                   
                    @if (string.IsNullOrEmpty(ViewBag.Username))
                    {
                        <li><a href="~/login/index">Đăng nhập</a></li>

                    }
                    else
                    {
                        <li><a href="/Admin/user/index">@ViewBag.Username</a></li>
                        <li><a onclick="DeleteSession()" href="javascript:">Đăng xuất</a></li>
                    }

                    <li><a asp-area="Admin" asp-controller="User" asp-action="Create"> Đăng ký </a></li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="heder-bottom">
        <div class="container">
            <div class="logo-nav">
